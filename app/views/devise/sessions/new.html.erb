<head>
<%= stylesheet_link_tag 'form', media: 'all' %>
</head>
<div id='form-body'>

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <h3><%= f.label :email %></h3><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__input' %>
  </div>

  <div class="field">
    <h3><%= f.label :password %></h3><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form__input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <h3><%= f.label :remember_me %></h3>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'form__input' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
