<!DOCTYPE html>
<html lang="en">
<head>
  <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h1>My favorite Cars</h1>

    <div class="search-box-container">
    <div class="search-box">
      <i class="bx bx-search"></i>
      <%= form_with url: favorite_search_cars_path, method: :get, local: true do |form| %>
        <%= form.text_field :query, placeholder: "Search in favorite cars", value: params[:query] %>
    <% end %>
    </div>
    </div>

  <div class="outer-container">
    <div class="inner-container" id="my-cars">
      <% if @cars.present? %>
        <% @cars.each do |car| %>
          <%= render partial: 'my_car', locals: { car: car } %>
        <% end %>
      <% else %>
        <p>No cars found.</p>
      <% end %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag 'script' %>
</body>
</html>
